    private async Task SoundStreaming()
    {
        if (_api is not null)
        {
            if (isActive is false)
            {
                isActive = true;
                await _api.StartStreamingCommand();
            }
            else
            {
                await _api.StopStreamingCommand();
            }
            isActive = !isActive;
        }
        return;
    }
}